{
  "openapi": "3.0.0",
  "info": {
    "title": "VoiceOwl API",
    "version": "1.0.0",
    "description": "API for audio transcription service"
  },
  "servers": [
    {
      "url": "http://localhost:4000/api/v1"
    }
  ],
  "paths": {
    "/transcription": {
      "post": {
        "summary": "Create a new transcription",
        "tags": ["Transcription"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "audioUrl": {
                    "type": "string",
                    "example": "https://example.com/sample.mp3"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Transcription created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "List transcriptions from last 30 days with pagination",
        "tags": ["Transcription"],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": { "type": "integer", "default": 1 },
            "description": "Page number"
          },
          {
            "in": "query",
            "name": "limit",
            "schema": { "type": "integer", "default": 10 },
            "description": "Number of items per page"
          }
        ],
        "responses": {
          "200": {
            "description": "Paginated list of transcriptions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "page": { "type": "integer" },
                    "limit": { "type": "integer" },
                    "total": { "type": "integer" },
                    "totalPages": { "type": "integer" },
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "_id": { "type": "string" },
                          "audioUrl": { "type": "string" },
                          "transcription": { "type": "string" },
                          "source": { "type": "string" },
                          "createdAt": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
        "delete": {
    "summary": "Delete a transcription by _id",
    "tags": ["Transcription"],
    "parameters": [
      {
        "name": "_id",
        "required": true,
         "in": "query",
        "schema": { "type": "string" },
        "description": "MongoDB _id of the transcription to delete"
      }
    ],
    "responses": {
      "200": {
        "description": "Transcription deleted successfully",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string", "example": "Transcription deleted successfully" }
              }
            }
          }
        }
      },
      "404": {
        "description": "Transcription not found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string", "example": "Transcription with specified _id not found" }
              }
            }
          }
        }
      }
    }
  }
    },
    "/transcription/azure": {
      "post": {
        "summary": "Create transcription using Azure",
        "tags": ["Transcription"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "audioUrl": { "type": "string", "example": "https://example.com/sample.mp3" },
                  "language": { "type": "string", "example": "en-US" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Azure transcription created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "id": { "type": "string" } }
                }
              }
            }
          }
        }
      }
    }
  }
}
